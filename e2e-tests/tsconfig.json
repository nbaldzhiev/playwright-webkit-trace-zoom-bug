{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@settings": [ "./settings" ],
      "@support/*": [ "./support/*" ],
      "@utils/*": [ "./tests/utils/*" ],
      "@commons": [ "../commons" ]
    },
    "lib": [
      "es2020",
      "ES2021.String"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  }
}
